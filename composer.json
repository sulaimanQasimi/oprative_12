{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "barryvdh/laravel-dompdf": "^3.1",
        "bavix/laravel-wallet": "^11.4",
        "geniusts/hijri-dates": "^1.2",
        "hekmatinasser/verta": "^8.5",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel-notification-channels/telegram": "^6.0",
        "laravel/framework": "^11.31",
        "laravel/reverb": "^1.0",
        "laravel/sanctum": "*",
        "laravel/tinker": "^2.9",
        "livewire/livewire": "^3.0",
        "maatwebsite/excel": "^3.1",
        "mojtabaahn/php-persian-number-to-words": "*",
        "namu/wirechat": "^0.0.7",
        "spatie/laravel-activitylog": "^4.10",
        "spatie/laravel-permission": "^6.16",
        "tightenco/ziggy": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": "npx concurrently -c \"#93c5fd,#c4b5fd,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"npm run dev\" --names='server,queue,vite'"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "laravel/breeze": "^2.3",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-laravel": "^3.0"
    }
}
